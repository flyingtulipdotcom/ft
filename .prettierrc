{
    "printWidth": 120,
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": false,
    "overrides": [
        {
            "files": "*.sol",
            "options": {
                "bracketSpacing": true,
                "tabWidth": 4
            }
        },
        {
            "files": [
                "*.js",
                "*.ts"
            ],
            "options": {
                "tabWidth": 2,
                "trailingComma": "none",
                "explicitTypes": "preserve"
            }
        },
        {
            "files": "*.json",
            "options": {
                "explicitTypes": "preserve"
            }
        }
    ]
}